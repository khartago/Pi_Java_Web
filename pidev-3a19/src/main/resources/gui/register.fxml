<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.RegisterController"
            stylesheets="@farmtech-theme.css">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="transparent-scroll">
            <VBox spacing="24.0" alignment="CENTER" minHeight="700.0">
                <padding>
                    <Insets top="50.0" right="50.0" bottom="50.0" left="50.0"/>
                </padding>

                <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                    <image>
                        <Image url="@farmtech-logo.png"/>
                    </image>
                </ImageView>

                <VBox spacing="6.0" alignment="CENTER">
                    <Label text="Créer un compte Fermier" styleClass="title-label"/>
                    <Label text="Rejoignez la communauté FARMTECH" 
                           style="-fx-text-fill: #6B7280; -fx-font-size: 13px;"/>
                </VBox>

                <VBox spacing="20.0" styleClass="card" prefWidth="420.0" maxWidth="420.0">
                    <padding>
                        <Insets top="36.0" right="36.0" bottom="36.0" left="36.0"/>
                    </padding>

                    <VBox spacing="8.0" alignment="CENTER_LEFT">
                        <Label text="Nom complet" styleClass="field-label"/>
                        <TextField fx:id="nomField" promptText="Nom complet" prefHeight="44.0" maxWidth="Infinity" styleClass="modern-input"/>
                    </VBox>

                    <VBox spacing="8.0" alignment="CENTER_LEFT">
                        <Label text="Email" styleClass="field-label"/>
                        <TextField fx:id="emailField" promptText="ex: farmer@example.com" prefHeight="44.0" maxWidth="Infinity" styleClass="modern-input"/>
                    </VBox>

                    <VBox spacing="8.0" alignment="CENTER_LEFT">
                        <Label text="Mot de passe" styleClass="field-label"/>
                        <PasswordField fx:id="passwordField" promptText="Minimum 6 caractères" prefHeight="44.0" maxWidth="Infinity" styleClass="modern-input"/>
                    </VBox>

                    <VBox spacing="8.0" alignment="CENTER_LEFT">
                        <Label text="Confirmer le mot de passe" styleClass="field-label"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirmation" prefHeight="44.0" maxWidth="Infinity" styleClass="modern-input"/>
                    </VBox>

                    <Label fx:id="errorLabel" textFill="#DC2626" visible="false" 
                           style="-fx-font-size: 12px; -fx-wrap-text: true; -fx-padding: 8 0 0 0;"/>

                    <VBox spacing="12.0" style="-fx-padding: 10 0 0 0;">
                        <Button text="S'inscrire"
                                fx:id="registerButton"
                                onAction="#handleRegister"
                                defaultButton="true"
                                styleClass="primary-button"
                                maxWidth="Infinity"
                                prefHeight="46.0"/>
                        <Button text="Annuler"
                                onAction="#handleCancel"
                                styleClass="secondary-button"
                                maxWidth="Infinity"
                                prefHeight="44.0"/>
                        <Button text="← Retour à l'accueil"
                                onAction="#handleHome"
                                styleClass="navbar-link"
                                maxWidth="Infinity"
                                style="-fx-padding: 8 0;"/>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
