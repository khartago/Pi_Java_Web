<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.AdminUsersController"
      spacing="10.0">
    <padding>
        <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
    </padding>

    <HBox spacing="8.0" alignment="CENTER_LEFT">
        <Label text="Gestion des utilisateurs" styleClass="section-title"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Ajouter" onAction="#handleAddUser" styleClass="primary-button"/>
        <Button text="Modifier" onAction="#handleEditUser" styleClass="secondary-button"/>
        <Button text="Supprimer" onAction="#handleDeleteUser" styleClass="danger-button"/>
    </HBox>

    <TableView fx:id="userTable" prefHeight="350.0">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="60.0"/>
            <TableColumn fx:id="nomColumn" text="Nom"/>
            <TableColumn fx:id="emailColumn" text="Email"/>
            <TableColumn fx:id="roleColumn" text="RÃ´le" prefWidth="100.0"/>
        </columns>
    </TableView>
</VBox>
