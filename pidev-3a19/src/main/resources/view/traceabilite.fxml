<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.TraceabiliteController"
            stylesheets="@../css/style.css, @farmtech-theme.css">

    <top>
        <VBox styleClass="page-with-hero">
            <VBox styleClass="hero-section" style="-fx-padding: 24 24 16 24;">
                <Label text="Traçabilité" styleClass="hero-title" style="-fx-font-size: 28px;"/>
                <Label text="Historique et suivi des mouvements produit" styleClass="hero-subtitle" style="-fx-font-size: 14px;"/>
            </VBox>
            <HBox alignment="CENTER_LEFT" styleClass="form-header" style="-fx-padding: 12 24 8 24; -fx-background-color: white; -fx-border-width: 0 0 1 0; -fx-border-color: #E5EDE5;">
                <Label text="Traçabilité produit" styleClass="form-title"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER" styleClass="transparent-scroll">
        <VBox spacing="15" style="-fx-background-color: transparent;">
            <GridPane hgap="15" vgap="10">
                <Label text="ID produit :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="idProduitLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Label fx:id="nomProduitLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="Stock :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Label fx:id="stockLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="Unité :" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Label fx:id="uniteLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label text="Expiration :" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <Label fx:id="expirationLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            </GridPane>
            <Label text="Historique"/>
            <TableView fx:id="historiqueTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="typeCol" text="Type" prefWidth="120"/>
                    <TableColumn fx:id="qAvantCol" text="Qté avant" prefWidth="80"/>
                    <TableColumn fx:id="qApresCol" text="Qté après" prefWidth="80"/>
                    <TableColumn fx:id="dateCol" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="commentaireCol" text="Commentaire" prefWidth="250"/>
                </columns>
            </TableView>
        </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Fermer" onAction="#handleClose"/>
        </HBox>
    </bottom>

    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
</BorderPane>
