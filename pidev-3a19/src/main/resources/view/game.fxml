<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.GameController"
            stylesheets="@/css/game.css">

    <!-- ================= TOP BAR ================= -->
    <top>
        <HBox spacing="20"
              alignment="CENTER_LEFT"
              styleClass="game-navbar">

            <padding>
                <Insets top="15" right="30" bottom="15" left="30"/>
            </padding>

            <!-- ===== LEFT SIDE : AVATAR ===== -->
            <HBox fx:id="avatarBox"
                  spacing="10"
                  alignment="CENTER_LEFT">

                <ImageView fx:id="avatarImage"
                           fitWidth="80"
                           fitHeight="80"
                           preserveRatio="true" />

                <Label fx:id="avatarText"
                       wrapText="true"
                       prefWidth="300"
                       style="-fx-background-color: rgba(255,255,255,0.8);
                          -fx-padding: 10;
                          -fx-background-radius: 15;
                          -fx-font-weight: bold;" />
            </HBox>

            <!-- ===== SPACER ===== -->
            <Region HBox.hgrow="ALWAYS"/>

            <!-- ===== RIGHT SIDE ===== -->

            <Label fx:id="weatherLabel"
                   text="Weather loading..."
                   style="-fx-font-size:18px; -fx-text-fill:white;" />

            <!-- WATER -->
            <Button onAction="#selectWater" styleClass="tool-image-button">
                <graphic>
                    <ImageView fitWidth="60" fitHeight="60" preserveRatio="true">
                        <image>
                            <Image url="@/images/water.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <!-- MANURE -->
            <Button onAction="#selectManure" styleClass="tool-image-button">
                <graphic>
                    <ImageView fitWidth="60" fitHeight="60" preserveRatio="true">
                        <image>
                            <Image url="@/images/manure.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <!-- SHOVEL -->
            <Button onAction="#selectShovel" styleClass="tool-image-button">
                <graphic>
                    <ImageView fitWidth="60" fitHeight="60" preserveRatio="true">
                        <image>
                            <Image url="@/images/shovel.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

        </HBox>
    </top>

    <!-- ================= GAME AREA ================= -->
    <center>
        <AnchorPane styleClass="game-background">

            <GridPane fx:id="plantGrid"
                      hgap="70"
                      vgap="45"
                      AnchorPane.leftAnchor="500"
                      AnchorPane.topAnchor="290">
            </GridPane>

        </AnchorPane>
    </center>

</BorderPane>