<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ProduitController"
            styleClass="root">

    <!-- Contenu central -->
    <center>
        <VBox spacing="15" styleClass="content-area">
            <!-- Titre et boutons d'action -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label text="Gestion des Produits" styleClass="page-title" />
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Ajouter" onAction="#handleAjouter" styleClass="primary-button" />
                <Button text="Modifier" onAction="#handleModifier" styleClass="secondary-button" />
                <Button text="Supprimer" onAction="#handleSupprimer" styleClass="danger-button" />
            </HBox>

            <!-- Tableau -->
            <TableView fx:id="produitTable" styleClass="table-view" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60" />
                    <TableColumn fx:id="nomColumn" text="Nom" prefWidth="250" />
                    <TableColumn fx:id="quantiteColumn" text="Quantité" prefWidth="150" />
                    <TableColumn fx:id="uniteColumn" text="Unité" prefWidth="150" />
                    <TableColumn fx:id="dateExpColumn" text="Date d'expiration" prefWidth="200" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <padding>
        <Insets top="0" right="0" bottom="0" left="0"/>
    </padding>
</BorderPane>