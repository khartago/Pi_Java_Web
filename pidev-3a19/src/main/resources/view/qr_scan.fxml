<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.QrScanController"
            stylesheets="@farmtech-theme.css"
            fitToWidth="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
            styleClass="transparent-scroll">
<VBox spacing="0" styleClass="page-with-hero" style="-fx-background-color: transparent;">
    <VBox styleClass="hero-section" style="-fx-padding: 24 24 20 24;">
        <Label text="QR Scan" styleClass="hero-title" style="-fx-font-size: 28px;"/>
        <Label text="Scannez un QR code produit pour afficher les détails et l’historique" styleClass="hero-subtitle" style="-fx-font-size: 14px;"/>
    </VBox>
    <VBox spacing="12" style="-fx-padding: 20;">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Choisir image QR" onAction="#handleChooseImage" styleClass="primary-button"/>
            <Button text="Ouvrir dossier QR" onAction="#handleOpenQrFolder" styleClass="secondary-button"/>
            <Button text="Fermer" onAction="#handleClose" styleClass="navbar-button"/>
        </HBox>
        <Label fx:id="selectedFileLabel" text="Aucun fichier"/>
        <Label fx:id="resultLabel" text="" style="-fx-font-weight: bold;"/>
        <HBox spacing="20">
            <VBox spacing="6">
                <Label text="Produit"/>
                <ImageView fx:id="produitImageView" fitWidth="120" fitHeight="120" preserveRatio="true"/>
                <Label fx:id="idProduitLabel" text="-"/>
                <Label fx:id="nomProduitLabel" text="-"/>
                <Label fx:id="expirationLabel" text="-"/>
            </VBox>
            <VBox spacing="4">
                <Label text="Historique"/>
                <TableView fx:id="historiqueTable" prefWidth="250" prefHeight="150">
                    <columns>
                        <TableColumn fx:id="typeCol" text="Type" prefWidth="120"/>
                        <TableColumn fx:id="dateCol" text="Date" prefWidth="130"/>
                    </columns>
                </TableView>
            </VBox>
        </HBox>
    </VBox>
</VBox>
</ScrollPane>
