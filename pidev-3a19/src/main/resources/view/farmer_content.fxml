<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.FarmerDashboardController"
      spacing="20.0">
    <padding>
        <Insets top="24.0" right="24.0" bottom="24.0" left="24.0"/>
    </padding>
    <HBox spacing="12.0" alignment="CENTER_LEFT">
        <VBox spacing="4.0">
            <Label text="Mes problèmes" styleClass="section-title"/>
            <Label text="Gérez et suivez vos problèmes agricoles"
                   style="-fx-text-fill: #6B7280; -fx-font-size: 13px;"/>
        </VBox>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Voir détail / diagnostic" onAction="#handleOpenDetail" styleClass="secondary-button"/>
        <Button text="+ Nouveau problème" onAction="#handleNewProbleme" styleClass="primary-button"/>
    </HBox>

    <VBox spacing="0.0" styleClass="card" VBox.vgrow="ALWAYS">
        <TableView fx:id="problemeTable" prefHeight="450.0">
            <columns>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="200.0"/>
                <TableColumn fx:id="graviteColumn" text="Gravité" prefWidth="120.0"/>
                <TableColumn fx:id="dateColumn" text="Date détection" prefWidth="180.0"/>
                <TableColumn fx:id="etatColumn" text="État" prefWidth="150.0"/>
            </columns>
        </TableView>
    </VBox>
</VBox>
