<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.SupportIssueFormController"
            stylesheets="@farmtech-theme.css">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="transparent-scroll">
            <VBox spacing="20.0" alignment="TOP_LEFT">
                <padding>
                    <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
                </padding>

                <Label fx:id="titleLabel" text="Nouveau problème" styleClass="title-label"/>

                <VBox spacing="6.0">
                    <Label text="Type *" styleClass="field-label"/>
                    <TextField fx:id="typeField" promptText="Ex: Maladie des cultures" styleClass="modern-input" prefHeight="44.0"/>
                </VBox>

                <VBox spacing="6.0">
                    <Label text="Description *" styleClass="field-label"/>
                    <TextArea fx:id="descriptionArea" prefRowCount="5" promptText="Décrivez le problème en détail..." styleClass="modern-input"/>
                </VBox>

                <VBox spacing="6.0">
                    <Label text="Gravité *" styleClass="field-label"/>
                    <ComboBox fx:id="graviteCombo" prefHeight="44.0" styleClass="modern-input"/>
                </VBox>

                <VBox spacing="6.0">
                    <Label text="Plantation concernée (optionnel)" styleClass="field-label"/>
                    <ComboBox fx:id="plantationCombo" prefHeight="44.0" styleClass="modern-input" promptText="Aucune"/>
                </VBox>

                <VBox spacing="6.0">
                    <Label text="Produit concerné (optionnel)" styleClass="field-label"/>
                    <ComboBox fx:id="produitCombo" prefHeight="44.0" styleClass="modern-input" promptText="Aucun"/>
                </VBox>

                <VBox spacing="8.0">
                    <Label text="Photos du problème" styleClass="field-label"/>
                    <HBox spacing="12.0" alignment="CENTER_LEFT">
                        <Button fx:id="browsePhotosButton" text="Parcourir" onAction="#handleBrowsePhotos" styleClass="secondary-button" prefHeight="36.0"/>
                    </HBox>
                    <FlowPane fx:id="photosFlowPane" hgap="12.0" vgap="12.0" style="-fx-padding: 8 0; -fx-border-color: #E5EDE5; -fx-border-width: 1px; -fx-border-radius: 8px; -fx-background-radius: 8px; -fx-background-color: #FAFBFA; -fx-padding: 12;"/>
                    <Label fx:id="photosErrorLabel" textFill="#DC2626" visible="false" style="-fx-font-size: 12px; -fx-wrap-text: true;"/>
                </VBox>

                <Label fx:id="errorLabel" textFill="#DC2626" visible="false"
                       style="-fx-font-size: 13px; -fx-wrap-text: true; -fx-padding: 8 0;"/>

                <HBox spacing="12.0" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                    <Button text="Annuler" onAction="#handleCancel" styleClass="secondary-button" prefHeight="44.0" prefWidth="120.0"/>
                    <Button text="Enregistrer" onAction="#handleSave" styleClass="primary-button" defaultButton="true" prefHeight="44.0" prefWidth="120.0"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
