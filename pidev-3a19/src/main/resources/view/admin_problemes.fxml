<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AdminProblemesController"
            stylesheets="@farmtech-theme.css">

    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>
            <HBox spacing="8.0" alignment="CENTER_LEFT">
                <Label text="Gestion des problèmes" styleClass="section-title"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label text="Filtre état:"/>
                <ComboBox fx:id="etatFilterCombo" onAction="#handleFilterEtat"/>
                <Button text="Éditer diagnostic" onAction="#handleEditDiagnostique" styleClass="secondary-button"/>
            </HBox>

            <TableView fx:id="problemeTable" prefHeight="260.0">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="60.0"/>
                    <TableColumn fx:id="typeColumn" text="Type"/>
                    <TableColumn fx:id="fermierColumn" text="Fermier"/>
                    <TableColumn fx:id="etatColumn" text="État" prefWidth="100.0"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
