<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.FarmerDashboardController"
            stylesheets="@farmtech-theme.css">

    <top>
        <VBox>
            <HBox styleClass="navbar" alignment="CENTER_LEFT" spacing="30.0">
                <padding>
                    <Insets top="16.0" right="40.0" bottom="16.0" left="40.0"/>
                </padding>
                
                <HBox spacing="12.0" alignment="CENTER_LEFT">
                    <ImageView fitHeight="40.0" fitWidth="40.0" preserveRatio="true">
                        <image>
                            <Image url="@farmtech-logo.png"/>
                        </image>
                    </ImageView>
                    <Label text="FARMTECH" styleClass="navbar-brand"/>
                </HBox>
                
                <Pane HBox.hgrow="ALWAYS"/>
                
                <Label text="Tableau de bord Fermier" styleClass="navbar-title"/>
                
                <Pane HBox.hgrow="ALWAYS"/>
                
                <Button text="Accueil" onAction="#handleHome" styleClass="navbar-link"/>
                <Button text="Produits &amp; Matériels" onAction="#handleProduitsMateriels" styleClass="navbar-link"/>
                <Button text="Se déconnecter" onAction="#handleLogout" styleClass="navbar-button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets top="24.0" right="24.0" bottom="24.0" left="24.0"/>
            </padding>
            <HBox spacing="12.0" alignment="CENTER_LEFT">
                <VBox spacing="4.0">
                    <Label text="Mes problèmes" styleClass="section-title"/>
                    <Label text="Gérez et suivez vos problèmes agricoles" 
                           style="-fx-text-fill: #6B7280; -fx-font-size: 13px;"/>
                </VBox>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="Voir détail / diagnostic" onAction="#handleOpenDetail" styleClass="secondary-button"/>
                <Button text="+ Nouveau problème" onAction="#handleNewProbleme" styleClass="primary-button"/>
            </HBox>

            <VBox spacing="0.0" styleClass="card">
                <TableView fx:id="problemeTable" prefHeight="450.0">
                    <columns>
                        <TableColumn fx:id="typeColumn" text="Type" prefWidth="200.0"/>
                        <TableColumn fx:id="graviteColumn" text="Gravité" prefWidth="120.0"/>
                        <TableColumn fx:id="dateColumn" text="Date détection" prefWidth="180.0"/>
                        <TableColumn fx:id="etatColumn" text="État" prefWidth="150.0"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
