<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.LoginController"
            stylesheets="@farmtech-theme.css">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="transparent-scroll">
            <VBox spacing="28.0" alignment="CENTER" minHeight="600.0">
                <padding>
                    <Insets top="50.0" right="50.0" bottom="50.0" left="50.0"/>
                </padding>

                <VBox spacing="16.0" alignment="CENTER">
                    <ImageView fitHeight="100.0" fitWidth="100.0" preserveRatio="true">
                        <image>
                            <Image url="@farmtech-logo.png"/>
                        </image>
                    </ImageView>
                    
                    <VBox spacing="6.0" alignment="CENTER">
                        <Label text="Bienvenue sur FARMTECH" styleClass="title-label"/>
                        <Label text="Gestion agricole intelligente" 
                               style="-fx-text-fill: #6B7280; -fx-font-size: 13px; -fx-font-weight: 400;"/>
                    </VBox>
                </VBox>

                <VBox spacing="20.0" styleClass="card" prefWidth="400.0" maxWidth="400.0">
                    <padding>
                        <Insets top="36.0" right="36.0" bottom="36.0" left="36.0"/>
                    </padding>

                    <VBox spacing="8.0" alignment="CENTER_LEFT">
                        <Label text="Email" styleClass="field-label"/>
                        <TextField fx:id="emailField" 
                                   promptText="ex: farmer@example.com" 
                                   prefHeight="44.0"
                                   maxWidth="Infinity"
                                   styleClass="modern-input"/>
                    </VBox>

                    <VBox spacing="8.0" alignment="CENTER_LEFT">
                        <Label text="Mot de passe" styleClass="field-label"/>
                        <PasswordField fx:id="passwordField" 
                                       promptText="Votre mot de passe" 
                                       prefHeight="44.0"
                                       maxWidth="Infinity"
                                       styleClass="modern-input"/>
                    </VBox>

                    <Label fx:id="errorLabel" textFill="#DC2626" visible="false" 
                           style="-fx-font-size: 12px; -fx-wrap-text: true; -fx-padding: 8 0 0 0;"/>

                    <VBox spacing="12.0" style="-fx-padding: 10 0 0 0;">
                        <Button text="Se connecter"
                                fx:id="loginButton"
                                onAction="#handleLogin"
                                defaultButton="true"
                                styleClass="primary-button"
                                maxWidth="Infinity"
                                prefHeight="46.0"/>
                        <Button text="Créer un compte"
                                fx:id="registerButton"
                                onAction="#handleRegister"
                                styleClass="secondary-button"
                                maxWidth="Infinity"
                                prefHeight="44.0"/>
                        <Button text="← Retour à l'accueil"
                                onAction="#handleHome"
                                styleClass="navbar-link"
                                maxWidth="Infinity"
                                style="-fx-padding: 8 0;"/>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
