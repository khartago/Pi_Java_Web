<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.TraceabiliteController"
            stylesheets="@../css/style.css"
            styleClass="root">

    <top>
        <VBox spacing="8" styleClass="content-area">
            <Label text="Traçabilité du produit" styleClass="page-title"/>

            <GridPane hgap="10" vgap="6">
                <columnConstraints>
                    <ColumnConstraints minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="ID :" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="idProduitLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nom :" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="nomProduitLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Stock :" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="stockLabel" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Unité :" styleClass="field-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="uniteLabel" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Expiration :" styleClass="field-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <Label fx:id="expirationLabel" text="-" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" styleClass="content-area">
            <Label text="Historique" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
            <TableView fx:id="historiqueTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="dateCol" text="Date" prefWidth="150"/>
                    <TableColumn fx:id="typeCol" text="Type" prefWidth="120"/>
                    <TableColumn fx:id="qAvantCol" text="Qté avant" prefWidth="90"/>
                    <TableColumn fx:id="qApresCol" text="Qté après" prefWidth="90"/>
                    <TableColumn fx:id="commentaireCol" text="Commentaire" prefWidth="240"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="form-actions">
            <Button text="Fermer" onAction="#handleClose" styleClass="secondary-button"/>
        </HBox>
    </bottom>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>




