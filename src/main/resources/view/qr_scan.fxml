<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.QrScanController"
            stylesheets="@../css/style.css"
            styleClass="root">

    <top>
        <VBox spacing="8" styleClass="content-area">
            <Label text="Scanner un QR Code produit" styleClass="page-title"/>
            <Label text="Choisissez une image contenant un QR code généré par l'application (format PROD:{idProduit})."/>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" styleClass="content-area">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Choisir une image" onAction="#handleChooseImage" styleClass="primary-button"/>
                <Button text="Ouvrir dossier QR" onAction="#handleOpenQrFolder" styleClass="secondary-button"/>
                <Label fx:id="selectedFileLabel" text="Aucun fichier sélectionné" wrapText="true" HBox.hgrow="ALWAYS"/>
            </HBox>

            <Label fx:id="resultLabel" text="" wrapText="true"/>

            <Separator/>

            <Label text="Détails du produit" style="-fx-font-size: 14; -fx-font-weight: bold;"/>

            <HBox spacing="14">
                <ImageView fx:id="produitImageView"
                           fitWidth="180" fitHeight="120"
                           preserveRatio="false" smooth="true"
                           style="-fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 8; -fx-background-radius: 8;"/>

                <GridPane hgap="10" vgap="6" HBox.hgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints minWidth="140"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="ID :" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="idProduitLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Nom :" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="nomProduitLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Date d'expiration :" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="expirationLabel" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                </GridPane>
            </HBox>

            <Label text="Historique du produit" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
            <TableView fx:id="historiqueTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="dateCol" text="Date" prefWidth="160"/>
                    <TableColumn fx:id="typeCol" text="Type" prefWidth="140"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="form-actions">
            <Button text="Fermer" onAction="#handleClose" styleClass="secondary-button"/>
        </HBox>
    </bottom>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>


