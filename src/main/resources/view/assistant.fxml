<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AssistantController"
            styleClass="root"
            stylesheets="@../css/style.css">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" styleClass="main-header">
            <Button text="← Retour" onAction="#handleBack" styleClass="secondary-button"/>
            <Label text="Assistant IA - Détails produit" styleClass="app-title"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.45" BorderPane.alignment="CENTER">

            <!-- LEFT: Inputs + Results -->
            <VBox spacing="12" styleClass="content-area">
                <Label text="Entrée" styleClass="page-title"/>

                <HBox spacing="10">
                    <TextField fx:id="nomProduitField" promptText="Nom du produit (ex: Lait, Engrais...)"
                               HBox.hgrow="ALWAYS"/>
                    <Button text="Chercher" onAction="#handleSearchByName" styleClass="primary-button"/>
                </HBox>

                <Separator/>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Choisir une image" onAction="#handleChooseImage" styleClass="secondary-button"/>
                    <Button text="Analyser l'image" onAction="#handleAnalyzeImage" styleClass="info-button"/>
                </HBox>

                <HBox spacing="12" alignment="CENTER_LEFT">
                    <ImageView fx:id="selectedImagePreview" fitWidth="120" fitHeight="80" preserveRatio="true" smooth="true"/>
                    <Label fx:id="selectedImageLabel" text="Aucune image sélectionnée" wrapText="true" HBox.hgrow="ALWAYS"/>
                </HBox>

                <Separator/>

                <Label text="Résultats" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="resIdCol" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="resNomCol" text="Nom" prefWidth="200"/>
                        <TableColumn fx:id="resStockCol" text="Stock" prefWidth="140"/>
                        <TableColumn fx:id="resExpCol" text="Expiration" prefWidth="140"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- RIGHT: Details -->
            <VBox spacing="12" styleClass="content-area">
                <Label fx:id="detailTitleLabel" text="Fiche produit" styleClass="page-title"/>

                <HBox spacing="14">
                    <ImageView fx:id="detailImageView" fitWidth="220" fitHeight="140" preserveRatio="false" smooth="true"
                               style="-fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 8; -fx-background-radius: 8;"/>
                    <GridPane hgap="10" vgap="8">
                        <columnConstraints>
                            <ColumnConstraints minWidth="110"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="ID :" styleClass="field-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Label fx:id="detailIdLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Nom :" styleClass="field-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Label fx:id="detailNomLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Stock :" styleClass="field-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Label fx:id="detailStockLabel" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Unité :" styleClass="field-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <Label fx:id="detailUniteLabel" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Expiration :" styleClass="field-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <Label fx:id="detailExpLabel" text="-" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="ImagePath :" styleClass="field-label" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <Label fx:id="detailImagePathLabel" text="-" wrapText="true" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                    </GridPane>
                </HBox>

                <Label text="Info match :" styleClass="field-label"/>
                <Label fx:id="matchInfoLabel" text="-" wrapText="true"/>

                <Separator/>

                <Label text="Matériels associés" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
                <TableView fx:id="materielTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="matIdCol" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="matNomCol" text="Nom" prefWidth="220"/>
                        <TableColumn fx:id="matEtatCol" text="État" prefWidth="120"/>
                        <TableColumn fx:id="matDateCol" text="Achat" prefWidth="120"/>
                        <TableColumn fx:id="matCoutCol" text="Coût" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>
        </SplitPane>
    </center>

    <padding>
        <Insets top="0" right="0" bottom="0" left="0"/>
    </padding>
</BorderPane>







