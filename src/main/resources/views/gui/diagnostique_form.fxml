<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.DiagnostiqueFormController"
            stylesheets="@farmtech-theme.css">

    <center>
        <VBox spacing="10.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <Label fx:id="titleLabel" text="Diagnostic du problème" styleClass="title-label"/>

            <Label text="Cause" styleClass="field-label"/>
            <TextArea fx:id="causeArea" prefRowCount="3"/>

            <Label text="Solution proposée" styleClass="field-label"/>
            <TextArea fx:id="solutionArea" prefRowCount="3"/>

            <Label text="Résultat" styleClass="field-label"/>
            <ComboBox fx:id="resultatCombo"/>

            <Label fx:id="errorLabel" textFill="#d14343" visible="false"/>

            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Button text="Annuler" onAction="#handleCancel" styleClass="secondary-button"/>
                <Button text="Enregistrer" onAction="#handleSave" styleClass="primary-button" defaultButton="true"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
